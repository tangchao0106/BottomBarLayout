<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/title_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:background="@color/colorAccent"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="输电统计"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </LinearLayout>

    <com.chaychan.bottombarlayout.MyViewPager
        android:id="@+id/home_viewpage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/title_count"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp">

    </com.chaychan.bottombarlayout.MyViewPager>

    <ImageView
        android:id="@+id/viewpage_index_select"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/home_viewpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_viewpage_select_one" />


</RelativeLayout>
