<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/title_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_newgrrwtj" />

        <TextView
            android:id="@+id/tv_count_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="个人任务统计"
            android:textSize="13sp" />


    </LinearLayout>

    <com.chaychan.bottombarlayout.MyViewPager
        android:id="@+id/home_viewpage"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/title_count">

    </com.chaychan.bottombarlayout.MyViewPager>

    <ImageView
        android:id="@+id/viewpage_index_select"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/home_viewpage"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_more2" />


</RelativeLayout>
